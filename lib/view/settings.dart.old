import 'package:flutter/material.dart';
import 'package:enjoy_diving/controller/LocationController.dart';

class SettingsPage extends StatefulWidget {

  Map<String, double> currentLocation;

  SettingsPage({
    Key key,
    // @required this.currentLocation
  }) : super(key: key);

  @override
  State<StatefulWidget> createState() => SettingsState();
}


class SettingsState extends State<SettingsPage> {

  Map<String, double> currentLocation;

  /*
  SettingsState(){//}Map<String, double> currentLocation) {
    this.currentLocation = currentLocation;
  }
  */

  @override
  Widget build(BuildContext context) {
    final textTheme = Theme.of(context).textTheme;

    return Scaffold(
      appBar: AppBar(
        title: Text('Settings'),
      ),
      body: CustomScrollView(
        slivers: <Widget>[
          _SliverGroupHeader(header: 'DEBUG'),
          _SliverBoxContent(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: <Widget>[
                Text(
                  'Device latitude  : ${currentLocation == null ? 'N/A' : currentLocation['latitude']}',
                  style: textTheme.subhead,
                ),
                Text(
                  'Device longitude  : ${currentLocation == null ? 'N/A' : currentLocation['longitude']}',
                  style: textTheme.subhead,
                ),
              ],
            ),
          ),
          _SliverGroupHeader(header: 'Géolocalisation'),
          _SliverBoxContent(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: <Widget>[
                Text(
                  "Active la géolocalisation du périphérique, ou alors il faut entrer manuellement la position du port.",
                  style: textTheme.subhead,
                ),
                new ActionChip(
                    avatar: CircleAvatar(
                      backgroundColor: Colors.grey.shade800,
                      child: Icon(Icons.check),
                      //child: Icon(rechercheBean.deep60to70 == true? Icons.check:Icons.close),
                    ),
                    label: Text('Géolocalisation'),
                    backgroundColor: Colors.green,
                    onPressed: () {
                      setState(() async {
                        LocationController locationController = new LocationController();
                        currentLocation = await locationController.getCurrentLocation();
                      });

                    }
                ),
                Text(
                  "où alors, sélectionner un port parmis la liste accessible (pas besoin alors de géolocalisation) active :",
                  style: textTheme.subhead,
                ),
              ],
            ),
          ),
          _SliverGroupHeader(header: 'A propos'),
          _SliverBoxContent(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: <Widget>[
                Text(
                  "Cette application est développée par Maxime VIALETTE.",
                  style: textTheme.subhead,
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }

  @override
  void initState() {
    super.initState();
  }
}

class _SliverGroupHeader extends StatelessWidget {
  final String header;

  _SliverGroupHeader({
    Key key,
    @required this.header,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    final theme = Theme.of(context);
    final textTheme = Theme.of(context).textTheme;
    return SliverToBoxAdapter(
      child: Padding(
        padding: EdgeInsets.symmetric(
          horizontal: 8,
          vertical: 16,
        ),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: <Widget>[
            Text(
              header,
              style: textTheme.headline,
            ),
            Padding(
              padding: EdgeInsets.only(right: 64),
              child: Container(
                height: 2,
                color: theme.accentColor,
              ),
            )
          ],
        ),
      ),
    );
  }
}

class _SliverBoxContent extends StatelessWidget {
  final Widget child;

  _SliverBoxContent({
    Key key,
    @required this.child,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return SliverPadding(
      padding: EdgeInsets.symmetric(horizontal: 8),
      sliver: SliverToBoxAdapter(
        child: child,
      ),
    );
  }
}